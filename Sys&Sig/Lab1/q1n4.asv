%impulse, step ,ramp
t=(-2:1:10);
impulse = t==0;
unitstep = t>=0;

subplot(2,2,1)
plot(t,impulse)
title('Impulse')
xlabel('Time')
ylabel('Amp')

subplot(2,2,2)
plot(t,unitstep)
title('Unitstep')
xlabel('Time')
ylabel('Amp')

subplot(2,2,3)
stem(t,impulse)
title('Impulse')
xlabel('')
ylabel('Amp')

subplot(2,2,4)
stem(t,unitstep)
title('Unitstep')
xlabel('n')
ylabel('Amp')


%hold on:
%plot(a,c)